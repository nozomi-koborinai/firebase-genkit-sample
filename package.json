{
  "name": "functions",
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only auth,functions,firestore --import data --export-on-exit --project=dev",
    "shell": "npm run build && firebase functions:shell --project=dev",
    "start": "genkit start -o -- tsx --watch src/index.ts",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "cli:remoteconfig:publish": "npm run build && node -e 'require(\"./lib/cli/remoteConfig\").publish()'"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@genkit-ai/google-cloud": "^1.6.2",
    "@genkit-ai/googleai": "^1.6.2",
    "@genkit-ai/vertexai": "^1.6.2",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^6.3.2",
    "genkit": "^1.6.2",
    "genkitx-mcp": "^1.6.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "firebase-functions-test": "^3.1.0",
    "genkit": "^1.6.0",
    "genkit-cli": "^1.6.1",
    "prettier": "^3.5.3",
    "typescript": "^4.9.0"
  },
  "private": true
}
